<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <Button
        android:id="@+id/momentsButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Moments"
        android:textColor="@color/mainWhite"
        android:textSize="35sp"
        android:backgroundTint="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chaptersButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Chapters"
        android:textColor="@color/mainWhite"
        android:textSize="35sp"
        android:backgroundTint="@color/mainGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/momentsButton" />

    <Button
        android:id="@+id/communityButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Community"
        android:textColor="@color/mainWhite"
        android:textSize="35sp"
        android:backgroundTint="@color/mainBlue"
        app:layout_constraintBottom_toTopOf="@+id/historyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="History"
        android:textColor="@color/mainWhite"
        android:textSize="35sp"
        android:backgroundTint="@color/mainGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintBottom_toTopOf="@+id/communityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chaptersButton"
        app:srcCompat="@drawable/mainlogo" />

</androidx.constraintlayout.widget.ConstraintLayout>